<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.CallForPapers"
    android:background="@drawable/bgm">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_callp"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/vv_light_blue"
            app:popupTheme="@style/PopupOverlay"
            app:titleTextColor="@color/black"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:src="@drawable/callpim"/>
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/vv_light_blue"
            app:cardCornerRadius="10dp">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:text="@string/paper_des"
                        android:gravity="left"/>
                </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>
        <!--Track1-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/track1_card"
            app:cardBackgroundColor="@color/light_blue"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/track1"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:id="@+id/track1"
                        android:drawableRight="@drawable/down"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/expandable"
                    android:layout_margin="10dp"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:drawableLeft="@drawable/ic_outline_circle_24"
                        android:text="Biomedical Instrumentation"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:drawableLeft="@drawable/ic_outline_circle_24"
                        android:text="IoT and Soft Computing Applications in Healthcare"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:drawableLeft="@drawable/ic_outline_circle_24"
                        android:text="Healthcare Mobile and Web Applications and Telemedicine"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:drawableLeft="@drawable/ic_outline_circle_24"
                        android:text="Accelerating Healthcare with Data and AI to Meet COVID-19 Challenges"/>
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <!--Track2-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/track2_card"
            app:cardBackgroundColor="@color/light_blue"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/track2"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:id="@+id/track2"
                        android:drawableRight="@drawable/down"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/expandable2"
                    android:layout_margin="10dp"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:drawableLeft="@drawable/ic_outline_circle_24"
                        android:text="Control, Communication and Automation Enabled Technologies"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:drawableLeft="@drawable/ic_outline_circle_24"
                        android:text="Mechatronics and Robotics Technologies"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:drawableLeft="@drawable/ic_outline_circle_24"
                        android:text="Blockchain, Inter-Vehicle Wireless Communications Technologies"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:drawableLeft="@drawable/ic_outline_circle_24"
                        android:text="Electric and Hybrid-Electric Vehicles"/>
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <!--Track3-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/track3_card"
            app:cardBackgroundColor="@color/light_blue"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/track3"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:id="@+id/track3"
                        android:drawableRight="@drawable/down"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/expandable3"
                    android:layout_margin="10dp"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:drawableLeft="@drawable/ic_outline_circle_24"
                        android:text="Nanotechnology and Sensor Based Solutions for Environment-Friendly Agriculture"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:drawableLeft="@drawable/ic_outline_circle_24"
                        android:text="Green Technology and Rural Environmental Concerns"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:drawableLeft="@drawable/ic_outline_circle_24"
                        android:text="Image Processing and Computational Intelligence in Agriculture"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:drawableLeft="@drawable/ic_outline_circle_24"
                        android:text="Biotechnology Solutions for Sustainable Agriculture"/>
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <!--Track 4-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/track4_card"
            app:cardBackgroundColor="@color/light_blue"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/track4"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:id="@+id/track4"
                        android:drawableRight="@drawable/down"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/expandable4"
                    android:layout_margin="10dp"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:drawableLeft="@drawable/ic_outline_circle_24"
                        android:text="Data Privacy and Security"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:drawableLeft="@drawable/ic_outline_circle_24"
                        android:text="Renewable and Sustainable Energy Solutions."/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:drawableLeft="@drawable/ic_outline_circle_24"
                        android:text="Hybrid Systems"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:drawableLeft="@drawable/ic_outline_circle_24"
                        android:text="Nanotechnology-Based Human-Centered Designs"/>
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
    </LinearLayout>
</ScrollView>